* {
  box-sizing: border-box
}

html, body {
  position: relative
  height: 100%
}

body {
  margin: 0 auto
}

#root, #root div {
  height: 100%
  position: relative
}

.col {
  float: left
  height: 100%
  padding: $padding
}

.one-fourth-col {
  width: 25%
}

.three-fourth-col {
  width: 75%
}

h1, h2, h3, h4, h5 {
  margin: 0
  padding: 0 0 15px 0
}

h2 {
  text-transform: uppercase
}
