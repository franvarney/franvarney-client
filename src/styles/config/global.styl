* {
  box-sizing: border-box
  &:focus {
    outline: none
  }
}

html, body {
  height: 100%
  position: relative
}

body {
  margin: 0 auto
}

h1, h2, hr, li, ul {
  reset()
}

#root,
#root > div,
#root > div > .page {
  height: 100%
  position: relative
}

h1, h2, h3, h4, h5 {
  height: auto
  margin: 0
  position: relative
}

h1
  display: block

h2, h3, h5
  color $darkText

h2 {
  font-size: 32px
  line-height: 32px
  margin: 0 0 15px 0
  text-transform: uppercase
}

h4 {
  font-size: 20px
  padding 0 0 5px 0
}

h5 {
  font-size: 14px
}

p, span, a {
  font-size: 16px
  line-height: 24px
}

a {
  color: $linkText
  font-weight: 500
}

img {
  display: inline-block
  height: auto
  position: relative
  width: 100%
}

pre {
  background-color: $codeBackground
  padding: 15px
  word-wrap: break-word
  width: 100%
}

p > code {
  padding: 2px 5px
}

.link-button, .link {
  cursor: pointer
  display: inline-block
  height: 50px
  vertical-align: middle

  a {
    display: block
    line-height: 50px
    text-decoration: underline
  }
}

.links {
  margin-top: $padding
  text-align: right
}

.link-button {
  border: none
  width: 200px

  a {
    color: $lightText
    height: 100%
    text-align: center
  }
}

.link {
  padding: 10px 0 10px 35px
  width: auto

  a {
    color: $lightBackground
    text-align: center
  }
}

.link-button.fixed {
  bottom: 5%
  left: 25%
  margin: 0 auto
  position: fixed
  right: 0
}

.note {
  font-size: 14px
  font-style: italic
}

hr {
  background-color: $lightGrey
  border: 0
  height: 5px
  margin-bottom: 15px
  width: 100%
}

hr.divider:nth-child(odd) {
  margin-bottom: 20px
}
