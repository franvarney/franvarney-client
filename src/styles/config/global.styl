html, body {
  position: relative;
  height: 100%;
}

body {
  width: 1024px;
  margin: 0 auto;
}

.wrap {
  margin-bottom: 50px;
  position: relative;
}

#modal {
  display: none;
  max-height: calc(100% - 100px);
  position: fixed;
  top: 50%;
  left: 50%;
  width: 1024px;
  transform: translate(-50%, -50%);
  #modal-image {
    position: relative;
    display: block;
    height: 100%;
    width: 100%;
  }
  #modal-text {
    background-color: lighten(#551A8B, 70%);
    float: right;
    padding: 15px;
    margin-top: 2px;
  }
}
