.select-location-container {
  ul {
    width: 100%

    > .place {
      color: $darkBackground
      display: inline-block
      height: 70px
      line-height: 70px
      padding: 0 15px
      position: relative
      overflow: hidden
      text-align: center
      text-overflow: clip
      text-overflow: ellipsis
      white-space: nowrap
      width: 25%

      &:hover {
        background-color: $lightBackground
        color: $white
        cursor: pointer
      }
    }
  }
}
