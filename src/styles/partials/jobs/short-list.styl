.jobs-container {
  display: inline-block
  padding: $padding
  width: 50%

  ul {
    font-size: 14px
    list-style-type: none

    li {
      font-size: 12px
      margin-top: 5px

      &:before {
        content: '\25CA'
        margin-right: 5px
      }
    }
  }

  h3 {
    display: inline-block
  }
}
